<Application
  x:Class="AssetViewer.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:data="clr-namespace:AssetViewer.Data"
  xmlns:local="clr-namespace:AssetViewer"
  StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Controls/Parts/FilterExpander.xaml" />
        <ResourceDictionary Source="Controls/Parts/FestivalTreeViewItemStyle.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <DataTemplate DataType="{x:Type data:Description}">
        <Grid SnapsToDevicePixels="True">
          <TextBlock
            Margin="0,1,0,1"
            local:TextBlockExtensions.DescFontStyle="{Binding FontStyle}"
            Foreground="#FFFFE4AD"
            Text="{Binding CurrentLang}"
            TextWrapping="Wrap" />
        </Grid>
      </DataTemplate>
    </ResourceDictionary>
  </Application.Resources>
</Application>