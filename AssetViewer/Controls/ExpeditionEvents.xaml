<UserControl
  x:Class="AssetViewer.Controls.ExpeditionEvents"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
  xmlns:converter="clr-namespace:AssetViewer.Converter"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:AssetViewer.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <UserControl.Resources>
    <converter:RewardToItemConverter x:Key="RewardToItemConverter" />
    <converter:VisibilityConverter x:Key="VisibilityConverter" />
    <CollectionViewSource x:Key="EventSource" x:Name="EventCollectionView" Source="{Binding Events}">
      <CollectionViewSource.SortDescriptions>
        <cm:SortDescription PropertyName="Name.CurrentLang" />
      </CollectionViewSource.SortDescriptions>
    </CollectionViewSource>
    <CollectionViewSource x:Key="PathsSource" Source="{Binding /Paths, Source={StaticResource EventSource}}" />
  </UserControl.Resources>
  <Grid Grid.Row="2">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Border
      Grid.Row="0"
      BorderBrush="#FF554628"
      BorderThickness="1"
      CornerRadius="5" />
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" MaxWidth="350" />
        <ColumnDefinition Width="10" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="10" />
        <ColumnDefinition Width="*" MaxWidth="350" />
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <Border BorderBrush="#FF554628" BorderThickness="1" CornerRadius="5">
          <ListBox
            x:Name="ListBoxEvents"
            HorizontalContentAlignment="Stretch"
            Background="Transparent"
            BorderBrush="Transparent"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Source={StaticResource EventSource}}">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Grid MaxHeight="24">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="{Binding Path=Name}"
                    TextTrimming="CharacterEllipsis" />
                  <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Text="{Binding Path=ID}" />
                </Grid>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </Border>
      </Grid>
      <Grid Grid.Column="2">
        <Border BorderBrush="#FF554628" BorderThickness="1" CornerRadius="5">
          <ListBox
            x:Name="ListBoxPaths"
            HorizontalContentAlignment="Stretch"
            Background="Transparent"
            BorderBrush="Transparent"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Source={StaticResource PathsSource}}">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Border BorderBrush="#FF554628" BorderThickness="1" CornerRadius="5">
                  <StackPanel Margin="5,0,0,0">
                    <TextBlock Text="{Binding ID}" />
                    <ItemsControl ItemsSource="{Binding Options}" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                      <ItemsControl.ItemTemplate>
                        <DataTemplate>
                          <Grid>
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="Auto" />
                              <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                              <TextBlock
                                Margin="0,0,5,0"
                                Foreground="Green"
                                Text="{Binding OptionAttribute}"
                                Visibility="{Binding OptionAttribute, Converter={StaticResource VisibilityConverter}}" />
                              <ItemsControl Margin="0,0,5,0" ItemsSource="{Binding Requirements}" Visibility="Visible">
                                <ItemsControl.ItemTemplate>
                                  <DataTemplate>
                                    <TextBlock Foreground="Red" Text="{Binding NeededAttribute}" />
                                  </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                  <ItemsPanelTemplate>
                                    <StackPanel IsItemsHost="True" Orientation="Horizontal" />
                                  </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                              </ItemsControl>
                            </StackPanel>
                            <TextBlock
                              Grid.Column="1"
                              Margin="0,0,0,0"
                              Text="{Binding Text}"
                              ToolTip="{Binding Text.CurrentLang}" />
                          </Grid>
                        </DataTemplate>
                      </ItemsControl.ItemTemplate>
                    </ItemsControl>
                  </StackPanel>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </Border>
      </Grid>
      <Border
        Grid.Column="4"
        BorderBrush="#FF554628"
        BorderThickness="1"
        CornerRadius="5"
        Visibility="Visible">
        <ListBox
          x:Name="ListBoxItems"
          HorizontalContentAlignment="Stretch"
          Background="Transparent"
          BorderBrush="Transparent"
          ItemsSource="{Binding Path=/Rewards, Source={StaticResource PathsSource}, Converter={StaticResource RewardToItemConverter}}"
          VirtualizingPanel.VirtualizationMode="Recycling">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Grid
                MaxHeight="24"
                Background="Transparent"
                ToolTipService.HasDropShadow="False"
                ToolTipService.InitialShowDelay="100"
                ToolTipService.ShowDuration="999999">
                <Grid.ToolTip>
                  <ToolTip
                    MaxWidth="300"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    DataContext="{Binding Path=PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                    <local:ItemCard SelectedAsset="{Binding}" />
                  </ToolTip>
                </Grid.ToolTip>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="30" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" HorizontalAlignment="Left" Source="{Binding Path=Text.Icon.Filename}" />
                <TextBlock
                  Grid.Column="1"
                  VerticalAlignment="Center"
                  Text="{Binding Path=Text}"
                  TextTrimming="CharacterEllipsis" />
                <TextBlock
                  Grid.Column="2"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  FontSize="11"
                  Text="{Binding Path=ID}" />
              </Grid>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Border>
    </Grid>
  </Grid>
</UserControl>